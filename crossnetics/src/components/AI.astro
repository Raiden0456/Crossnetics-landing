---
import { Image } from 'astro:assets';

interface Props {
	header: string;
	body: string;
}

const { header, body } = Astro.props;
---

<div class="bg-sky-100 flex items-start justify-center h-fit min-h-[949px] ">
  <div class="flex flex-col lg:flex-row items-center justify-between w-11/12 lg:w-2/3 mt-20">
    <div class="flex flex-col items-start justify-center w-full lg:w-[45%]">
      <div class="flex flex-row gap-x-6">
        <Image src={`/stars.svg`} alt="sprinkle" width={50} height={50}/>
        <h1 class="text-2xl xl:text-3xl 2xl:text-4xl font-bold text-start text-gray-600 whitespace-pre-wrap">{header}</h1>
      </div>
      <p class="mt-10 text-base font-normal leading-tight text-start text-gray-600 whitespace-pre-wrap">{body}</p>
    </div>
  
    <div class="w-1/2 h-1/2">
      <Image src={`/3d_images/PC_robo.svg`} alt="Robo" width={50} height={50} class="w-full h-full rotate-[15deg]"/>
    </div>
  </div>
</div>
