---
import { Image } from 'astro:assets';
import Ipad_swiper from './Ipad_swiper';

interface Props {
	header: string;
	body: string;
	button: string;
}

const { header, body, button } = Astro.props;
---

<div class="bg-gradient-to-l from-hero_gradient_1 to-hero_gradient_2 flex items-center justify-center h-[745px] ">

  <div class="flex items-center justify-between w-11/12 lg:w-2/3">
    <div class="flex flex-col items-start justify-center w-full lg:w-5/12">
      <h1 class="text-white text-2xl xl:text-3xl 2xl:text-4xl font-extrabold leading-[40px] xl:leading-[42px] 2xl:leading-[46.80px] uppercase mb-2 whitespace-pre-line">{header}</h1>
      <p class="text-white text-xl xl:text-1.5xl 2xl:text-2xl font-medium leading-[26px] xl:leading-[28px] 2xl:leading-[31.20px] mb-12">{body}</p>
      <div class="w-52 h-11 px-7.5 py-2.5 bg-white rounded-2xl justify-center items-center gap-4 inline-flex cursor-pointer">
          <div class="text-blue-500 text-xs font-extrabold uppercase">{button}</div>
      </div>
    </div>
  
    <div class="hidden absolute lg:flex lg:relative w-1/2 h-1/2">
      <Ipad_swiper image_path={["/slide.png", "/slide.png", "/slide.png"]} client:load/>
    </div>
  </div>
</div>
