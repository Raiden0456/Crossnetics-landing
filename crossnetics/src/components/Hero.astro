---
import Ipad_swiper from './Ipad_swiper';

interface Props {
	header: string;
	body: string;
	button: string;
}

const { header, body, button } = Astro.props;
---

<div class="bg-gradient-to-l from-hero_gradient_1 to-hero_gradient_2 flex items-center justify-center h-[745px] gap-x-32">

  <div class="flex flex-col items-start justify-center w-3/12">
    <h1 class="text-white text-2xl xl:text-3xl 2xl:text-4xl font-extrabold leading-[40px] xl:leading-[42px] 2xl:leading-[46.80px] uppercase mb-2 whitespace-pre-line">{header}</h1>
    <p class="text-white text-xl xl:text-1.5xl 2xl:text-2xl font-medium leading-[26px] xl:leading-[28px] 2xl:leading-[31.20px] mb-12">{body}</p>
    <div class="w-52 h-11 px-7.5 py-2.5 bg-white rounded-xl justify-center items-center gap-4 inline-flex cursor-pointer">
        <div class="text-blue-500 text-xs font-extrabold uppercase">{button}</div>
    </div>
  </div>

  <div class="relative w-[30%] h-[60%]">
    <Ipad_swiper client:load/>
  </div>

  
</div>
