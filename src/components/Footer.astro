---
import { Image } from 'astro:assets';
interface Social {
  title: string;
  url: string;
  icon: string;
}

interface Props {
  contact_us: string;
  discover: string;
  button: string;
  social_media: Social[];
}

const { contact_us, discover, social_media, button } = Astro.props;
---

<div class="h-fit min-h-52 bg-web3-bg flex flex-col items-center justify-center">
  <div class="w-11/12 lg:w-2/3 flex flex-col items-start justify-center my-10 gap-y-6 md:gap-y-2">
    <div class="w-full flex flex-row flex-wrap items-start justify-between gap-y-6">
      <div class="flex flex-row gap-x-4 w-full md:w-1/2">
        <Image class="h-1/2 lg:h-1/3" src="/cool_logo.svg" alt="logo" width={50} height={50} />
        <p class="text-slate-300 text-sm xl:text-base font-bold whitespace-pre-line">{discover}</p>
      </div>
      <div class="flex flex-row flex-wrap items-center justify-start lg:justify-end gap-4 w-fit">
        {social_media.map((social, index) => (
          <div class="flex flex-row gap-x-1 2lg:gap-x-2 items-center justify-center w-22 text-slate-300 hover:text-slate-100">
            <Image src={social.icon} alt="icon" width={10} height={10} />
            <a href={social.url} class="text-3xs 2lg:text-2xs xl:text-sm font-bold uppercase">{social.title}</a>
          </div>
        ))}
      </div>
    </div>
    <div class="md:ml-16 h-11 px-6 py-2.5 bg-footer-button hover:bg-footer-button-hover rounded-2xl flex justify-center items-center opacity-70 cursor-pointer text-footer-button-text hover:text-footer-button-hover-text">
      <div class="text-xs font-extrabold uppercase">{button}</div>
    </div>
  </div>
</div>
<div class="h-fit min-h-10 bg-footer-dark flex items-center justify-center bottom-0">
  <div class="w-11/12 lg:w-2/3 flex items-center justify-between my-6">
    <div class="w-full flex flex-row flex-wrap items-center justify-between gap-y-4">
      <div class="flex flex-row flex-wrap items-center justify-start gap-6 w-full lg:w-1/2">
        <a href="/" class="text-blue-500 hover:text-blue-400 text-sm font-medium underline capitalize" >Privacy policy</a>
        <a href="/" class="text-blue-500 hover:text-blue-400 text-sm font-medium underline capitalize" >Data & Privacy FAQ</a>
        <a href="/" class="text-blue-500 hover:text-blue-400 text-sm font-medium underline capitalize" >Influencer Opt Out</a>
      </div>
      <div class="flex flex-row gap-x-2 items-center justify-center">
        <p class="text-slate-300 text-xs font-bold uppercase">{contact_us}</p>
        <a href="/" class="text-blue-500 hover:text-blue-400 text-sm font-medium underline capitalize">info@crossnetics.com </a>
      </div>
    </div>
  </div>
</div>