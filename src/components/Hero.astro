---
import { Image } from 'astro:assets';
import Ipad_swiper from './Ipad_swiper';

interface Props {
	header: string;
	body: string;
	button: string;
  gradient: string[]
}

const { header, body, button, gradient } = Astro.props;
---

<div style={{background: `linear-gradient(to left, ${gradient[0]}, ${gradient[1]})`}} class="flex items-center justify-center h-screen ">

  <div class="flex items-center justify-between w-11/12 lg:w-2/3 my-40">
    <div class="flex flex-col items-start justify-center w-full lg:w-5/12">
      <h1 class="text-white text-2xl xl:text-3xl 2xl:text-4xl font-black mb-4 whitespace-pre-line leading-tight">{header}</h1>
      <p class="text-white text-base xl:text-xl font-medium mb-12 leading-tight whitespace-pre-line">{body}</p>
      <div class="w-52 h-11 px-7.5 py-2.5 bg-white rounded-2xl justify-center items-center gap-4 inline-flex cursor-pointer transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
          <div class="text-blue-500 text-xs font-extrabold uppercase">{button}</div>
      </div>
    </div>
  
    <div class="hidden absolute lg:flex lg:relative w-1/2 h-1/2">
      <Ipad_swiper image_path={["/slide.png", "/slide.png", "/slide.png"]} pagi_active={true} client:load/>
    </div>
  </div>
</div>
