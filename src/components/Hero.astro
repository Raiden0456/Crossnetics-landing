---
import { Image } from 'astro:assets';
import Ipad_swiper from './Ipad_swiper';

interface Props {
	header: string;
	body: string;
	button: string;
  gradient: string[]
  ipad_slides?: string[]
  hero_image?: string
}

const { header, body, button, gradient, ipad_slides, hero_image } = Astro.props;
---

<div style={{background: `linear-gradient(to left, ${gradient[0]}, ${gradient[1]})`}} class="flex items-start md:items-center justify-center h-fit md:h-screen">

  <div class="flex flex-col lg:flex-row items-center justify-between w-10/12 lg:w-2/3 my-20 md:my-40 gap-y-5">
    <div class="flex flex-col items-start justify-center w-full lg:w-5/12">
      <h1 class="text-white text-4xl font-black mb-4 whitespace-pre-line leading-tight">{header}</h1>
      <p class="text-white text-xl font-medium mb-12 leading-tight whitespace-pre-line">{body}</p>
      <div class="hidden w-52 h-11 px-7.5 py-2.5 bg-white rounded-2xl justify-center items-center gap-4 lg:inline-flex cursor-pointer transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
          <div class="text-blue-500 text-xs font-extrabold uppercase">{button}</div>
      </div>
    </div>
    <div class="flex lg:relative w-full h-full md:w-2/3 md:h-2/3 lg:w-1/2 lg:h-1/2 justify-end">
      {ipad_slides && <Ipad_swiper image_path={ipad_slides} pagi_active={true} client:load/>}
      {hero_image && <Image src={hero_image} alt="" height={50} width={50} class="w-10/12 h-10/12" />}
    </div>
    <div class="lg:hidden mt-16 w-52 h-11 px-7.5 py-2.5 bg-white rounded-2xl justify-center items-center gap-4 inline-flex cursor-pointer transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
      <div class="text-blue-500 text-xs font-extrabold uppercase">{button}</div>
    </div>
  </div>
</div>
