---
import { Image } from 'astro:assets';
interface Props {
  title: string;
  partner_images: any[];
}

const { title, partner_images } = Astro.props;
---

<div class="h-fit bg-sky-100 flex items-start justify-center">
  <div class="w-10/12 lg:w-2/3 flex flex-col justify-center gap-y-10 xl:gap-y-14 my-20">
    <div class="flex flex-col items-start justify-start h-full w-full xl:w-[70%]">
      <h1 class="text-3xl 2xl:text-4xl font-bold text-start text-gray-600">{title}</h1>
    </div>
    <div class="flex flex-row flex-wrap justify-start md:justify-between items-center gap-10 md:gap-14">
      {partner_images.map((image) => (
        <div class="w-3/12 flex justify-center items-center">
          <Image class="w-full h-full object-contain" src={image} alt="" />
        </div>
      ))}
    </div>
  </div>
</div>
