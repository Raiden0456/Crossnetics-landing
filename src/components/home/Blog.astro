---
import { Image } from 'astro:assets'

//Images
import page from '../../images/3d_images/page.png'
import blogImg from '../../images/blog_img/blog.svg'

interface Section {
  title: string
  body: string
  image: any
}

interface Props {
  title: string
  sections: Section[]
  blog: string
  general: {
    title: string
    body: string
  }
}

const { title, sections, general, blog } = Astro.props
---

<div class='h-fit bg-sky-100 flex items-start justify-center'>
  <div
    class='w-10/12 lg:w-2/3 flex flex-col items-start justify-start gap-y-10 my-10 lg:my-20'
  >
    <div
      class='flex flex-col items-start justify-start h-full w-full 2lg:w-[70%]'
    >
      <h1
        class='text-3xl 2xl:text-4xl font-bold text-start text-gray-600 leading-tight'
      >
        {title}
      </h1>
    </div>
    <div
      class='grid grid-cols-1 md:grid-cols-2 2lg:grid-cols-3 gap-6'
    >
      <div
        class='relative min-h-[500px] md:min-h-0 overflow-hidden md:col-span-2 flex flex-col items-start justify-start md:justify-center p-7 xl:p-10 bg-gradient-to-l from-hero_gradient_1 to-hero_gradient_2 rounded-[50px]'
      >
        <div class='flex flex-col mt-3 gap-y-3 w-full md:w-2/3 z-10'>
          <h1
            class='text-white text-base font-bold uppercase leading-tight'
          >
            {general.title}
          </h1>
          <p class='text-white text-sm'>{general.body}</p>
        </div>
        <Image
          src={page}
          alt=''
          class='flex w-11/12 xl:w-1/3 md:w-4/12 2lg:w-5/12 absolute -right-10 md:right-0 -bottom-12 md:-mt-10 2lg:-mt-4 z-100'
        />
      </div>
      {
        sections.map((section, index) => (
          <div class='flex flex-col items-start justify-start p-7 xl:p-10 bg-white rounded-[50px] gap-y-3 xl:gap-y-4'>
            <Image src={section.image} alt='' class='w-10 h-10' />
            <h1 class='text-blue-500 text-base font-bold uppercase leading-tight'>
              {section.title}
            </h1>
            <p class='text-gray-400 text-sm'>{section.body}</p>
          </div>
        ))
      }
    </div>
    <div
      class='flex flex-row items-start justify-start xl:w-3/4 gap-x-5 lg:gap-x-10'
    >
      <Image src={blogImg} alt='' class='w-8 md:w-10 xl:w-14' />
      <h1 class='text-blue-500 text-xs lg:text-base leading-tight'>
        {blog}
      </h1>
    </div>
  </div>
</div>
