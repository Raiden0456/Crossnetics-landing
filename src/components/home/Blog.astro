---
import { Image } from 'astro:assets';

interface Section {
  title: string;
  body: string;
  image: string;
}

interface Props {
  title: string;
  sections: Section[];
  blog: string;
  general: {
    title: string;
    body: string;
  };
}

const { title, sections, general, blog } = Astro.props;
---

<div class="h-fit bg-sky-100 flex items-start justify-center">
  <div class="w-11/12 lg:w-2/3 flex flex-col items-start justify-start gap-y-10 xl:gap-y-20 my-20 ">
    <div class="flex flex-col items-start justify-start h-full w-full  2lg:w-[70%]">
      <h1 class="text-2xl xl:text-3xl 2xl:text-4xl font-bold text-start text-gray-600 leading-tight">{title}</h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 2lg:grid-cols-3 gap-6">
      <div class="relative overflow-hidden md:col-span-2 flex flex-col items-start justify-center p-8 xl:p-10 bg-gradient-to-l from-hero_gradient_1 to-hero_gradient_2 rounded-[50px]">
        <div class="flex flex-col  gap-y-4 w-full md:w-2/3 z-10">
          <h1 class="text-white text-xs xl:text-base font-bold uppercase leading-tight">{general.title}</h1>
          <p class="text-white text-2xs xl:text-sm">{general.body}</p>
        </div>
        <Image src="/3d_images/page.png" alt="" width={30} height={30} class="hidden md:flex xl:w-1/3 w-1/4 2lg:w-5/12 absolute right-0 -mt-10 2lg:-mt-4 z-100" />
      </div>
      {sections.map((section, index) => (
        <div class="flex flex-col items-start justify-start p-8 xl:p-10 bg-white rounded-[50px] gap-y-2 xl:gap-y-4">
          <Image src={`/blog/${section.image}.svg`} alt="" width={30} height={30} class="w-8 h-8"/> 
          <h1 class="text-blue-500 text-xs xl:text-base font-bold uppercase leading-tight">{section.title}</h1>
          <p class="text-gray-400 text-2xs xl:text-sm">{section.body}</p>
        </div>
      ))}
    </div>
    <div class="flex flex-row items-start justify-start xl:w-3/4 gap-x-10">
      <Image src={`/blog/blog.svg`} alt="" width={30} height={30} class="w-8 md:w-10 xl:w-14"/>
      <h1 class="text-blue-500 text-xs xl:text-base leading-tight">{blog}</h1>
    </div>
  </div>
</div>
