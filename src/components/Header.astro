---
import { Image } from 'astro:assets';
interface Section {
  title: string;
  url: string;
}
interface Props {
	sections: Section[];
}

const { sections } = Astro.props;
const activeSection = sections.find(section => section.url === Astro.url.pathname);

---

<div class="absolute hidden lg:fixed lg:flex justify-center items-center top-0 h-16 w-full bg-blue-500 z-50">
  <div class="w-2/3 h-full flex flex-row justify-between">
    <Image src="/header.svg" alt="" height={50} width={50} class="w-[20%]" loading="eager" />
    <div class="flex flex-row gap-x-6 h-full justify-center items-center">
      <div class="flex flex-row gap-x-4 xl:gap-x-6 h-full">
        {sections.map(section => {
          const isActive = section === activeSection;
          const activeClass = isActive ? 'border-b-2 border-b-white text-white' : 'hover:text-white hover:border-b-2 hover:border-b-white transition-all duration-100';
          return (
            <a href={section.url} class={`h-full flex justify-center items-center ${activeClass} text-sky-100 `}>
              <p class=" text-center text-2xs xl:text-xs font-extrabold uppercase">{section.title}</p>
            </a>
          );
        })}
      </div>
      <div class="h-11 px-8 py-2.5 bg-blue-500 rounded-2xl border-2 border-white justify-center items-center inline-flex cursor-pointer hover:bg-white text-white hover:text-blue-500 transition-all duration-200 hover:scale-105 hover:shadow-lg">
        <div class="text-2xs xl:text-xs font-extrabold uppercase">Connect web2/3</div>
      </div> 
    </div>
  </div>
</div>
