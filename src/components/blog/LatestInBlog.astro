---
import BlogItemSkeleton from './LatestInBlog';

interface Posts {
    id: number;
    date: string;
    title: string;
    text: string;
    tags: string[];
    likes: number;
    image: any;
}

interface Props {
    posts: Posts[];
}

const { posts } = Astro.props;
---

<div class="bg-[#F1F8FF]">
    <div class="w-10/12 lg:w-2/3 mx-auto py-20">
        <div class="flex justify-between">
            <h2 class="text-2xl font-bold mb-4 text-[#484E5E]">Latest in Blog</h2>
            <button class="text-[#0080FF]">View All</button>
        </div>
        <div class="grid grid-cols-1 m-auto mt-6 lg:grid-cols-2 gap-4">
            <BlogItemSkeleton post={posts[0]} height="300px" rounded="20px" client:load/>
            <BlogItemSkeleton post={posts[0]} height="300px" rounded="20px" client:load/>
        </div>

        <div class="grid grid-cols-1 m-auto mt-10 lg:grid-cols-3 gap-4">
            <BlogItemSkeleton post={posts[0]} vertical={true} height="350px" rounded="20px" client:load/>
            <BlogItemSkeleton post={posts[0]} vertical={true} height="350px" rounded="20px" client:load/>
            <BlogItemSkeleton post={posts[0]} vertical={true} height="350px" rounded="20px" client:load/>
        </div>
    </div>
</div>
