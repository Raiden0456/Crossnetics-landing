---
interface Props {
  title: string
  body: string
  button: string
}

const { title, body, button } = Astro.props
---

<div
  class='flex flex-col gap-y-8 justify-start items-center ml-[1.9rem]'
>
  <div class='flex flex-col gap-y-3'>
    <h1 class='text-gray-600 text-2xl xl:text-3xl font-bold'>
      {title}
    </h1>
    <p class='text-gray-600 whitespace-pre-wrap text-base'>{body}</p>
  </div>
  <div
    class='w-52 h-11 px-7.5 py-2.5 bg-white rounded-2xl justify-center items-center gap-4 inline-flex cursor-pointer transform transition-transform duration-300 hover:scale-105 hover:shadow-lg'
  >
    <div class='text-blue-500 text-xs font-extrabold uppercase'>
      {button}
    </div>
  </div>
</div>
